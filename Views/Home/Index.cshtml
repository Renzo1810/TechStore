@model TechStore.Models.ProductModel

<form asp-action="AddProduct" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="NombreProducto">Nombre del producto:</label>
        <input asp-for="NombreProducto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripción>Descripción:</label>
        <input asp-for="Descripción" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio:</label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label>IGV:</label>
        <input asp-for="IGV" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>